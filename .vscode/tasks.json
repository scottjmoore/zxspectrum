{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "type": "shell",
            "command": "make",
            "problemMatcher": []
        },
        {
            "label": "clean",
            "group": "build",
            "type": "shell",
            "command": "make clean"
        },
        {
            "label": "run",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "type": "shell",
            "command": "make && fuse --tape build/program.tap -g 4x"
        },
        {
            "label": "retroarch",
            "group": "test",
            "type": "shell",
            "command": "make && retroarch -D -L /usr/lib64/libretro/fuse_libretro.so ./build/program.tap"
        },
        {
            "label": "zesarux",
            "group": "test",
            "type": "shell",
            "command": "make && echo $(pwd) && zesarux --machine 48k --vo xwindows --tape $(pwd)/build/program.tap"
        }
    ]
}