{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "type": "shell",
            "command": "make",
            "problemMatcher": []
        },
        {
            "label": "clean",
            "group": "build",
            "type": "shell",
            "command": "make clean"
        },
        {
            "label": "run",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "type": "shell",
            "command": "make && fuse --tape program.tap -g 4x"
        },
        {
            "label": "retroarch",
            "group": "test",
            "type": "shell",
            "command": "make && retroarch -D -L /usr/lib64/libretro/fuse_libretro.so ./program.tap"
        }
    ]
}